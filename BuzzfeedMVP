public class LifeCalculator{
  public static void main(String[]args){
    System.out.println("Which quiz would you like to take: Marriage, House, City, Job");
    //put options on separate lines//
    String quizName = TextIO.getlnString();
    if (quizName.equals("Marriage")){
      showMarriage();
    } else if (quizName.equals("House")){
      showHouse();
    } else if (quizName.equals("City")){
      showCity();
    } else if (quizName.equals("Job")){
      showJob();
    }else{
      System.out.println("Please pick one of the available quizzes.");
      // this is the main which has users pick a quiz and calls to the quiz which will be in a separate mathod//
    }
  }
public static void showMarriage(){
  System.out.println ("Welcome to the Marriage Quiz. This quiz will tell you which celebrity you will marry.");
}

public static void showHouse(){
  System.out.println ("Welcome to the House quiz. This quiz will tell you what kind of house you will live in.");
  int[] house = new int[5];

    System.out.println("What is your secret talent\n(1)Juggling\n(2)Stop a microwave at 1 second every time\n(3)Nothing. I'm talentless\n(4)Whistling through your nose\nEnter an integer 1-4:");
    house[0] = TextIO.getlnInt();
    System.out.println("If you had to become an inanimate object what would it be\n(1)A rug\n(2)A doorbell\n(3)Teddy bear\n(4)Cell phone\nEnter an integer 1-4:");
    house[1] = TextIO.getlnInt();
    System.out.println("Which state would you be ok with living in? Not excited or sad, just like ehhh thats fine.\n(1)Ohio\n(2)Delaware\n(3)Idaho\n(4)Iowa\nEnter an integer 1-4:");
    house[2] = TextIO.getlnInt();
    System.out.println("What is your hogwarts house\n(1)Slytherin\n(2)Hufflepuff\n(3)Ravenclaw\n(4)Gryffindor\nEnter an integer 1-4:");
    house[3] = TextIO.getlnInt();
    System.out.println("What animal would you like to scale up to the size of a horse\n(1)Squirrel\n(2)Owl\n(3)Ant\n(4)Arianna Grande\nEnter an integer 1-4:");
    house[4] = TextIO.getlnInt();

    int sum = 0;
    for (int i=0; i<house.length; i++) {
      sum += house[i];
    }
    if (sum<=10 && sum>=5) {
      System.out.println("You're going to live in a Jimmy Choo shoe box (at least its a designer shoebox)");
    } else if (sum<=15 && sum>=10) {
      System.out.println("You're going to live in a mansion with a river running through the living room");
    } else if (sum<=20 && sum>=15) {
      System.out.println("You're going to live in an underwater cave with dolphins and manatees");
    } else {
      System.out.println("You're going to live in a penthouse with a ghost (Don't worry he's friendly)");
    }
  }

public static void showJob(){
  System.out.println ("Welcome to the job quiz. This quiz will tell you what kind of job you will have.");
}

public static void showCity(){
  System.out.println ("Welcome to the City quiz. This quiz will tell you what city you will live in.");
}
}

